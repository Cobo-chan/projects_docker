<%= render 'shared/header' %>

<h2>新規登録フォーム</h2>

<div class="wrapper">
  <%= form_with model: @user, url: user_registration_path, class: "sign-up-form", id: 'form', local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    <div class="field user-icon-registration" id="preview-container">
      <%= f.label :image, 'ユーザーアイコン', class: "label-name" %><span class="caution-text"> ※必須</span>
      <%= f.file_field :image, class: "image-form" %>
      <div id="setting-image">
        <%= image_tag 'default_icon', id: 'preview-icon' %> 
      </div>
    </div>

    <div class="field">
      <%= f.label :nickname, 'ニックネーム', class: "label-name" %><span class="caution-text"> ※必須 20文字以内</span>
      <%= f.text_field :nickname, autofocus: true, class: "input-form nickname" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label-name" %><span class="caution-text"> ※必須</span>
      <%= f.email_field :email, class: "input-form email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: "label-name" %><span class="caution-text"> ※必須 半角英数字6文字以上</span>
      <%= f.password_field :password, class: "input-form password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認", class: "label-name" %><span class="caution-text"> ※必須</span>
      <%= f.password_field :password_confirmation, class: "input-form password-confirmation" %>
    </div>

    <div class="field">
      <%= f.label :introduction, 'プロフィール', class: "label-name" %><span class="caution-text"> ※任意</span>
      <%= f.text_area :introduction, placeholder: '※任意 自己紹介文を書いてみましょう', class: "input-form introduction" %>
    </div>

    <div class="actions">
      <%= f.submit "ユーザー登録", class: "sign-up-btn" %>
    </div>
  <% end %>
<%= render 'shared/footer' %>
</div>